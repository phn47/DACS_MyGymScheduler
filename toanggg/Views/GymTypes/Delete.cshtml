<div class="container-fluid Delete-form-list">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <div class="header-title">
                        <h4 class="card-title">Thông tin loại phòng tập</h4>
                        <p class="mb-0">
                            Bạn có chắc chắn muốn xóa thông tin loại phòng tập?
                        </p>

                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Delete" method="post" data-toggle="validator" enctype="multipart/form-data">
                        <div class="row">
                            <input type="hidden" asp-for="GymTypeId" />
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label">Họ tên</label>
                                    <input asp-for="Name" readonly class="form-control" placeholder="Nhập họ tên" />
                                    @*  <div class="help-block with-errors"></div> *@
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Description" class="control-label">Số điện thoại</label>
                                    <input asp-for="Description" readonly class="form-control" placeholder="Nhập số điện thoại" />
                                    @*  <div class="help-block with-errors"></div> *@
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary mr-2">Xóa thông tin</button>
                                    <div type="submit" class="btn mr-2">
                                        <a asp-action="Index">Trở về danh sách</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>