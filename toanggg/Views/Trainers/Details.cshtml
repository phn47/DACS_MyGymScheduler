<div class="container-fluid detail-form-list">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <div class="header-title">
                        <h4 class="card-title">Thông tin chi tiết huấn luyện viên</h4>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" data-toggle="validator" enctype="multipart/form-data">
                        <div class="row">
                            <input type="hidden" asp-for="TrainerId" />
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FullName" class="control-label">Họ tên</label>
                                    <input asp-for="FullName" readonly class="form-control" placeholder="Nhập họ tên" data-errors="Vui lòng nhập đầy đủ họ tên." required />
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="PhoneNumber" class="control-label">Số điện thoại</label>
                                    <input asp-for="PhoneNumber" readonly class="form-control" placeholder="Nhập số điện thoại" data-errors="Vui lòng nhập số điện thoại." required />
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Email" class="control-label">Email</label>
                                    <input asp-for="Email" readonly class="form-control" placeholder="Nhập địa chỉ email" data-errors="Vui lòng nhập địa chỉ email." required />
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Description" class="control-label">Mô tả</label>
                                    <input asp-for="Description" readonly class="form-control" placeholder="Nhập mô tả" data-errors="Vui lòng nhập mô tả huấn luyện viên." required />
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Expertise" class="control-label">Chuyên môn</label>
                                    <input asp-for="Expertise" readonly class="form-control" placeholder="Nhập chuyên môn" data-errors="Vui lòng nhập chuyên môn của huấn luyện viên." required />
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Status" class="control-label">Trạng thái</label>
                                    <input asp-for="Status" readonly class="form-control" placeholder="Nhập trạng thái" data-errors="Vui lòng nhập trạng thái của huấn luyện viên." required />
                                    <div class="help-block with-errors"></div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="GymId" class="control-label">GymId ?</label>
                                    <input asp-for="GymId" readonly class="form-control" asp-items="ViewBag.GymId"></input>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="UserId" class="control-label">UserId ?</label>
                                    <input asp-for="UserId" readonly class="form-control" asp-items="ViewBag.UserId"></input>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">

                                    <button type="submit" class="btn btn-primary mr-2" asp-action="Edit" asp-route-id="@Model?.TrainerId">Chỉnh sửa thông tin</button>
                                    <div type="submit" class="btn mr-2">
                                        <a asp-action="Index">Back to List</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>