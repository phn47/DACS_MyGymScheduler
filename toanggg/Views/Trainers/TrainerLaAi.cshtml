@functions {
    string GetClassInfo(int? userId)
    {
        string GetTrainerAvatar(int? userId)
        {
            string connectionString = "Data Source=LAPTOP-T4RGGNJJ;Initial Catalog=DACS;Integrated Security=True";
            using (SqlConnection connection = new SqlConnection(connectionString))
            {
                connection.Open();
                string query = "SELECT avatar FROM Users WHERE user_id = @UserId";
                using (SqlCommand command = new SqlCommand(query, connection))
                {
                    command.Parameters.AddWithValue("@UserId", userId);
                    using (SqlDataReader reader = command.ExecuteReader())
                    {
                        if (reader.Read())
                        {
                            return reader.GetString(reader.GetOrdinal("avatar"));
                        }
                    }
                }
            }
            return string.Empty;
        }

        return GetTrainerAvatar(userId) ?? "Chưa có lớp";
    }
