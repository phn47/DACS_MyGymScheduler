<div class="container-fluid detail-form-list spad">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <div class="header-title">
                        <h4 class="card-title">Thông Tin Chi Tiết Nhân Viên</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="~/Hinh/HinhGym/@Model.TrainerAvatar" alt="Trainer Avatar" class="img-fluid rounded-circle" style="max-width: 250px;">
                        </div>
                        <div class="col-md-8">
                            <form method="post" data-toggle="validator" enctype="multipart/form-data">
                                <div class="col-md-7">
                                    <div class="form-group">
                                        <h2>@Model.TrainerFullName</h2>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="control-label">Email</label>
                                            <input readonly class="form-control" required value="@Model.TrainerEmail" />
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="control-label">Số điện thoại</label>
                                            <input readonly class="form-control" required value="@Model.TrainerPhone" />
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="control-label">Địa chỉ</label>
                                            <input readonly class="form-control" required value="@Model.TrainerAddress" />
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
