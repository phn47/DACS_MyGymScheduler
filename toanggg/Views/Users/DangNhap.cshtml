@model toanggg.Models.LoginVM
@{
    ViewData["Title"] = "DangNhap";
    Layout = "_LayoutCustomer";
}
<style>


    .text-rbg {
        color: rgb(0, 149, 246, 1); /* Màu chữ ban đầu */
    }

        .text-rbg:hover {
            color: rgb(0, 149, 246, 0.5); /* Màu chữ khi hover */
        }

    .login-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 30px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 5px;
    }

        .login-container h2 {
            text-align: center; /* Căn giữa tiêu đề */
            color: #333; /* Màu chữ */
            font-family: Arial, sans-serif;
        }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            color: #555; /* Màu chữ */
        }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ddd; /* Màu và độ dày đường viền */
        border-radius: 5px; /* Bo tròn các góc */
        transition: border-color 0.3s ease; /* Hiệu ứng khi hover */
    }

        .form-control:focus {
            border-color: #007bff; /* Màu đường viền khi được focus */
        }

    .submit {
        text-align: center; /* Căn giữa nội dung */
    }

        .submit button[type="submit"] {
            font-size: 16px;
            color: #fff; /* Màu chữ */
            text-transform: uppercase;
            font-weight: 700;
            border: none;
            padding: 14px 20px;
            background: #f36100; /* Màu nền */
            width: 100%;
            border-radius: 5px; /* Bo tròn các góc */
            cursor: pointer;
            transition: background-color 0.3s ease; /* Hiệu ứng màu nền */
        }

            .submit button[type="submit"]:hover {
                background: #d35400; /* Màu nền khi di chuột vào */
            }



    .facebook {
        text-align: center; /* Căn giữa nội dung */
    }

        .facebook a[type="link"] {
            font-size: 12px;
            color: #fff; /* Màu chữ */
            text-transform: uppercase;
            font-weight: 700;
            border: none;
            padding: 4px 20px;
            background: #007cff; /* Màu nền */
            width: 100%;
            border-radius: 100px; /* Bo tròn các góc */
            cursor: pointer;
            transition: background-color 0.3s ease; /* Hiệu ứng màu nền */
            display: flex;
            align-items: center; /* Căn giữa theo chiều dọc */
            justify-content: center; /* Căn giữa theo chiều ngang */
        }

            .facebook a[type="link"] svg {
                margin-right: 20px; /* Khoảng cách giữa icon và văn bản */
            }

            .facebook a[type="link"]:hover {
                background: #0074e8; /* Màu nền khi di chuột vào */
            }

    .google {
        text-align: center; /* Căn giữa nội dung */
    }

        .google a[type="link"] {
            font-size: 12px;
            color: #111111; /* Màu chữ */
            text-transform: uppercase;
            font-weight: 700;
            padding: 4px 20px;
            background: #FFFFFF; /* Màu nền */
            border: 2px solid #D3D3D3; /* Khung màu xám */
            width: 100%;
            border-radius: 100px; /* Bo tròn các góc */
            cursor: pointer;
            transition: background-color 0.3s ease; /* Hiệu ứng màu nền */
            display: flex;
            align-items: center; /* Căn giữa theo chiều dọc */
            justify-content: center; /* Căn giữa theo chiều ngang */
        }

            .google a[type="link"] svg {
                margin-right: 32px; /* Khoảng cách giữa icon và văn bản */
            }

            .google a[type="link"]:hover {
                background: #F8F8FF; /* Màu nền khi di chuột vào */
            }



    h1, h2, h3, h4, h5, h6 {
        margin-top: 0;
        margin-bottom: .5rem;
        font-family: "Roboto Condensed",-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen,Ubuntu,Cantarell,"Fira Sans","Droid Sans","Helvetica Neue",sans-serif;
    }

    .roboto {
        font-family: "Roboto Condensed", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif;
    }
</style>

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/img/hero/hinh-1.jpg">
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb-text">

                    <div class="bt-option">
                        <h2></h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<div class=" spad">
    <div class="login-container">
        <h2>Đăng nhập</h2>
        <form asp-action="DangNhap" asp-controller="Users" method="post">
            <div class="form-group mt-5">
                <label for="Username" class="roboto">Tên đăng nhập</label>
                <input type="text" id="Username" name="Username" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Password" class="roboto">Mật khẩu</label>
                <input type="password" id="Password" name="Password" class="form-control" />
            </div>
            <div class="submit">
                <button type="submit">Đăng nhập</button>
            </div>
            <div>
                <span class="text-danger">@Html.ValidationSummary(true, "", new { @class = "text-danger" })</span>
            </div>
            <div class="d-flex justify-content-center pt-3">
                <h5 class="text-center">
                    <a class="text-muted">Bạn chưa có tài khoản ư?</a>
                    <a class="text-rbg" asp-controller="Users" asp-action="DangKy">Đăng ký ngay</a>
                </h5>
            </div>
            <div class="d-flex justify-content-center pt-3">
                <h5 class="text-center">
                    <a class="text-muted roboto">HOẶC</a>

                </h5>
            </div>
            <div class="facebook mt-3">
                <a asp-controller="Users" asp-action="FacebookLogin" type="link">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="40" height="40" fill="currentColor"><path d="M12.001 2C6.47813 2 2.00098 6.47715 2.00098 12C2.00098 16.9913 5.65783 21.1283 10.4385 21.8785V14.8906H7.89941V12H10.4385V9.79688C10.4385 7.29063 11.9314 5.90625 14.2156 5.90625C15.3097 5.90625 16.4541 6.10156 16.4541 6.10156V8.5625H15.1931C13.9509 8.5625 13.5635 9.33334 13.5635 10.1242V12H16.3369L15.8936 14.8906H13.5635V21.8785C18.3441 21.1283 22.001 16.9913 22.001 12C22.001 6.47715 17.5238 2 12.001 2Z"></path></svg>
                    Đăng nhập bằng Facebook
                </a>
            </div>
            <div class="google mt-3">
                <a asp-controller="Users" asp-action="GoogleLogin" type="link">
                    <svg xmlns="http://www.w3.org/2000/svg" height="38" viewBox="0 0 24 24" width="38"><path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4" /><path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853" /><path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05" /><path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335" /><path d="M1 1h22v22H1z" fill="none" /></svg>
                    Đăng nhập bằng Google
                </a>
            </div>

        </form>

    </div>
</div>


