@model SearchResultsViewModel

@{
    ViewData["Title"] = "Search Results";
    Layout = "_LayoutCustomer";
}
<style>
    .section-club-list {
        margin-top: 60px;
    }

    .section {
        margin-bottom: 64px;
    }

    .container {
        width: 100%;
        padding-right: 15px;
        padding-left: 15px;
        margin-right: auto;
        margin-left: auto;
    }

    .m-b-3 {
        margin-bottom: 30px;
    }

    .text-center {
        text-align: center;
    }

    .section-title {
        font-family: "Roboto Condensed", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif;
        font-size: 32px;
        font-weight: 700;
        text-transform: uppercase;
        color: #454545;
        margin-bottom: 32px;
    }

    .roboto {
        font-family: "Roboto Condensed", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif;
    }

    .ml-auto, .mx-auto {
        margin-left: auto;
    }

    .mr-auto, .mx-auto {
        margin-right: auto;
    }

    .mb-5, .my-5 {
        margin-bottom: 3rem;
    }

    .seo-desc {
        font-size: 16px;
        font-weight: normal;
    }

    .align-items-center {
        -ms-flex-align: center;
        align-items: center;
    }

    .justify-content-center {
        -ms-flex-pack: center;
        justify-content: center;
    }

    .row {
        display: -ms-flexbox;
        display: flex;
        -ms-flex-wrap: wrap;
        flex-wrap: wrap;
        margin-right: -15px;
        margin-left: -15px;
    }

    .form-group {
        margin-bottom: 24px;
    }

    .mb-0, .my-0 {
        margin-bottom: 0;
    }

    select.form-control {
        -webkit-appearance: none;
        background-position: right 50%;
        background-repeat: no-repeat;
        background-size: 50px 20px;
        padding-right: 48px;
    }

        select.form-control.control-light {
            -webkit-appearance: none;
            background-position: right 50%;
            background-repeat: no-repeat;
            background-size: 30px 20px;
            padding-right: 1.5em;
        }


        select.form-control:active, select.form-control:focus {
            box-shadow: none;
            border-color: #d7dbe3;
        }

    .form-control.control-light {
        background: #fff;
    }

    .card-list .item {
        overflow: hidden;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        margin-bottom: 32px;
        position: relative;
    }

        .card-list .item .item-img {
            position: relative;
            overflow: hidden;
            z-index: 1;
        }

            .card-list .item .item-img img {
                -webkit-transition: all .3s ease;
                transition: all .3s ease;
                width: 100%;
                -o-object-fit: cover;
                object-fit: cover;
            }

            .card-list .item .item-img.ratio-4-3 {
                position: relative;
            }

                .card-list .item .item-img.ratio-4-3:before {
                    display: block;
                    content: "";
                    width: 100%;
                    padding-top: 75%
                }

                .card-list .item .item-img.ratio-4-3 > .content {
                    position: absolute;
                    top: 0;
                    left: 0;
                    right: 0;
                    bottom: 0
                }

                .card-list .item .item-img.ratio-4-3 img {
                    height: 100%;
                }

            .card-list .item .item-img.ratio-3-4 {
                position: relative;
            }

                .card-list .item .item-img.ratio-3-4:before {
                    display: block;
                    content: "";
                    width: 100%;
                    padding-top: 133.33333%;
                }

                .card-list .item .item-img.ratio-3-4 > .content {
                    position: absolute;
                    top: 0;
                    left: 0;
                    right: 0;
                    bottom: 0;
                }

                .card-list .item .item-img.ratio-3-4 img {
                    height: 100%;
                }

            .card-list .item .item-img.ratio-1-1 {
                position: relative;
            }

                .card-list .item .item-img.ratio-1-1:before {
                    display: block;
                    content: "";
                    width: 100%;
                    padding-top: 100%;
                }

                .card-list .item .item-img.ratio-1-1 > .content {
                    position: absolute;
                    top: 0;
                    left: 0;
                    right: 0;
                    bottom: 0
                }

                .card-list .item .item-img.ratio-1-1 img {
                    height: 100%;
                }

        .card-list .item:hover .item-img img {
            -webkit-transform: scale(1.1);
            -ms-transform: scale(1.1);
            transform: scale(1.1);
        }

        .card-list .item .stripe-vector {
            position: absolute;
            bottom: 0;
            right: 0;
            z-index: 0;
        }

        .card-list .item .item-body {
            position: relative;
            z-index: 1;
            padding: 24px;
        }

            .card-list .item .item-body .title {
                display: inline-block;
                text-decoration: none;
                font-size: 20px;
                color: #f36100;
                font-family: "Roboto Condensed",-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen,Ubuntu,Cantarell,"Fira Sans","Droid Sans","Helvetica Neue",sans-serif;
                font-weight: 700;
                text-transform: uppercase;
                margin-bottom: 16px;
            }

    .icon-list:not(:last-child) {
        margin-bottom: 12px;
    }

    .icon-list > i {
        margin-right: 6px;
    }

    h1, h2, h3, h4, h5, h6 {
        margin-top: 0;
        margin-bottom: .5rem;
        font-family: "Roboto Condensed",-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen,Ubuntu,Cantarell,"Fira Sans","Droid Sans","Helvetica Neue",sans-serif;
    }

</style>
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/img/hero/hinh-1.jpg">
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb-text">

                    <div class="bt-option">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<div class="container-fluid add-form-list spad">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <div class="header-title">
                        <h4 class="card-title">Kết quả tìm kiếm</h4>
                    </div>
                </div>
                @if (Model.Gyms.Any())
                {
                    <h2 class="text-center">Phòng gym</h2>
                    <div class="row">
                        @foreach (var result in Model.Gyms)
                        {
                            <div class="col-md-4">
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <h5 class="card-title text-dark">@result.Name</h5>
                                        <p class="card-text text-dark">@result.Description</p>
                                        <p class="card-text text-dark"><small class="text-muted text-dark">Địa chỉ: @result.Address</small></p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                @if (Model.Trainers.Any())
                {
                    <h2 class="text-center">Huấn luyện viên</h2>
                    <div class="row">
                        @foreach (var result in Model.Trainers)
                        {
                            <div class="col-md-4">
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <h5 class="card-title text-dark">@result.Name</h5>
                                        <p class="card-text text-dark">@result.Description</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                @if (Model.GymTypes.Any())
                {
                    <h2 class=" text-center">Các loại phòng tập thể dục</h2>
                    <div class="row">
                        @foreach (var result in Model.GymTypes)
                        {
                            <div class="col-md-4">
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <h5 class="card-title text-dark">@result.Name</h5>
                                        <p class="card-text text-dark">@result.Description</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }

                @if (Model.MembershipTypes.Any())
                {
                    <h2 class="text-center">Các loại thành viên</h2>
                    <div class="row">
                        @foreach (var result in Model.MembershipTypes)
                        {
                            <div class="col-md-4">
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <h5 class="card-title text-dark">@result.Name</h5>
                                        <p class="card-text text-dark">@result.Description</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }

            </div>
        </div>
    </div>
</div>










