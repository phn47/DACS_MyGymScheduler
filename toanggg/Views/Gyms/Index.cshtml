@model IEnumerable<toanggg.Data.Gym>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutDashBoard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="d-flex flex-wrap flex-wrap align-items-center justify-content-between mb-4">
                <div>
                    <h4 class="mb-3">Danh sách phòng tập</h4>
                    <p class="mb-0">
                        Cung cấp thông tin chi tiết về mỗi phòng tập như tên, địa chỉ, sdt, email, mô tả, v.v.. Giúp người dùng hiểu rõ về các phòng tập.
                    </p>
                </div>
                <a asp-area="" asp-controller="Gyms" asp-action="Create" class="btn btn-primary add-list">
                    <i class="las la-plus mr-3"></i>Thêm phòng tập
                </a>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="table-responsive rounded mb-3">
                <table class=" table mb-0 tbl-server-info dataTable no-footer" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
                    <thead class="bg-white text-uppercase">
                        <tr class="ligth ligth-data" role="row">
                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Họ tên: activate to sort column ascending">@Html.DisplayNameFor(model => model.Name)</th>
                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Địa chỉ: activate to sort column ascending">@Html.DisplayNameFor(model => model.Address)</th>
                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="SDT: activate to sort column ascending">@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Email: activate to sort column ascending">@Html.DisplayNameFor(model => model.Email)</th>
                            @* <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Mô tả: activate to sort column ascending" >@Html.DisplayNameFor(model => model.Description)</th>
                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Website: activate to sort column ascending"> @Html.DisplayNameFor(model => model.Website)</th> *@
                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Giờ mở cửa: activate to sort column ascending">@Html.DisplayNameFor(model => model.OpenHours)</th>
                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Giờ đóng cửa: activate to sort column ascending">@Html.DisplayNameFor(model => model.CloseHours)</th>
                            @* <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Phạm vi giá: activate to sort column ascending">@Html.DisplayNameFor(model => model.PriceRange)</th>
                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Họ tên: activate to sort column ascending">@Html.DisplayNameFor(model => model.Amenities)</th>
                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Hình: activate to sort column ascending">@Html.DisplayNameFor(model => model.Images)</th>
                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Họ tên: activate to sort column ascending">@Html.DisplayNameFor(model => model.Rating)</th>
                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Trạng thái: activate to sort column ascending" >@Html.DisplayNameFor(model => model.Status)</th> *@

                            <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Hành động: activate to sort column ascending">Hành động</th>
                        </tr>
                    </thead>
                    <tbody class="ligth-body">
                        @foreach (var item in Model)
                        {
                            <tr class="odd">
                                <td> @Html.DisplayFor(modelItem => item.Name)</td>
                                <td> @Html.DisplayFor(modelItem => item.Address)</td>
                                <td> @Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                                <td> @Html.DisplayFor(modelItem => item.Email)</td>
                                @* <td> @Html.DisplayFor(modelItem => item.Description)</td>
                            <td> @Html.DisplayFor(modelItem => item.Website)</td> *@
                                <td> @Html.DisplayFor(modelItem => item.OpenHours)</td>
                                <td> @Html.DisplayFor(modelItem => item.CloseHours)</td>
                                @* <td> @Html.DisplayFor(modelItem => item.PriceRange)</td>
                            <td> @Html.DisplayFor(modelItem => item.Amenities)</td>
                            <td> @Html.DisplayFor(modelItem => item.Images)</td>
                            <td> @Html.DisplayFor(modelItem => item.Rating)</td>
                            <td> @Html.DisplayFor(modelItem => item.Status)</td> *@

                                <td>
                                    <div class="d-flex align-items-center list-action">
                                        <a class="badge bg-success mr-2" data-toggle="tooltip" data-placement="top" title="Edit"
                                           asp-controller="Gyms" asp-action="Edit" asp-route-id="@item.GymId">
                                            <i class="ri-pencil-line mr-0"></i>
                                        </a>

                                        <a class="badge bg-warning mr-2" data-toggle="tooltip" data-placement="top" title="Delete"
                                           asp-controller="Gyms" asp-action="Delete" asp-route-id="@item.GymId">
                                            <i class="ri-delete-bin-line mr-0"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Page end  -->
</div>
