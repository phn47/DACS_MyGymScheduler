                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="shiftSelect" class="control-label color-text">Ca làm việc</label>
                                    <select id="shiftSelect" class="form-control">
